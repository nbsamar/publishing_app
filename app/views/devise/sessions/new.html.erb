<div class="container">
  <div class="card" style="margin: 0.5em 15em 10em 15em">
    <h3 class="text-center">Log in</h3><br>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-row">
        <div class="form-group col-md-5" style="margin-left: 13em">
          <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-5" style="margin-left: 13em">
          <%= f.label :password %><br/>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-5" style="margin-left: 13em">
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="actions" style="margin-left: 13em">
        <%= f.submit "Log in", class: 'btn btn-info' %>
      </div>
    <% end %>

    <div style="margin: 0.5em 0 0.5em 13em">
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-info', style: "margin-bottom: 0.5em" %>
      <br/>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-info' %><br/>
    </div>
  </div>
</div>
