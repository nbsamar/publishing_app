<div class="container" style="margin-top: 0.5em">
  <div class="card card-center" style="margin: 2em">
    <h2 style="margin-left: 0.5em">
      <%= @article.name %>
    </h2>
    <hr>
    <h6 style="margin-left: 0.5em">Written by: <%= @article.author %></h6>
    <hr>
    <div style="margin: 0.5em">
      <%= @article.content %>
    </div>
    <% if user_signed_in? && current_user.id == @article.user_id %>
      <div>
        <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-info', style: "margin: 0.5em" %>
      </div>
    <% end %>
  </div>
</div>
